<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circuit_board"
    tools:context="com.bogdancristian.logicgate.Level1">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/and" />

    <Button
        android:id="@+id/in1"

        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginEnd="92dp"
        android:background="@drawable/power_off"
        android:shadowColor="#969696"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/in2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/in2"

        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginStart="92dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/power_off"
        android:shadowColor="#969696"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
